public class RecursionExample {

    public static void printNumbers(int n) {
        // Base case: If n is 1, print and stop
        if (n == 1) {
            System.out.println(n);
            return;
        }

        // Recursive step
        System.out.println(n);
        printNumbers(n - 1);
    }

    public static void main(String[] args) {
        printNumbers(5); // Example call
    }
}