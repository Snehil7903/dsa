int start = 0;
int end= size-1;
int result=-1;
while(start<end){
    if(ele == arr[mid]){
        //we will not return rather search in left for first occur
        res=mid;
        end=mid-1;
    }
    else if(ele < arr[mid]) end=mid-1;
    else if(ele > arr[mid]) start=mid+1;
}
return res;


int start = 0;
int end= size-1;
int result=-1;
while(start<end){
    if(ele == arr[mid]){
        //we will not return rather search in right for last occur
        res=mid;
        start=mid+1;
    }
    else if(ele < arr[mid]) end=mid-1;
    else if(ele > arr[mid]) start=mid+1;
}
return res;