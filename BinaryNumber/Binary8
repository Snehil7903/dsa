868. Binary Gap


class Solution {
    public int binaryGap(int n) {
        int prev = -1;
        int pos = 0;
        int ans = 0;

        while (n > 0) {
            if ((n & 1) == 1) {
                if (prev != -1) {
                    ans = Math.max(ans, pos - prev);
                }
                prev = pos;
            }
            n >>= 1;
            pos++;
        }
        return ans;
    }
}